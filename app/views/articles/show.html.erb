<header class="bg-light p-2 text-secondary border-bottom" >
  <p>Wikinimous</p>
</header>
<article class="bg-white p-4">
  <div class="container w-75 p-3">
    <h2 class="mb-5 mr-2" style="display: inline-block;"><%= @article.title%></h2>
    <%= link_to "Edit", edit_article_path(@article.id) %>
    <%= link_to "Erase", article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %>
    <p><%= @article.content%></p>
  </div>
</article>
